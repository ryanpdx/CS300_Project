        function remove(){
            var c=document.getElementById("mycanvas");  
            var cxt=c.getContext("2d");  
            c.height=c.height;   
        }// This is the remove function which draws an empty coordinate in order to cover the old position  
        
        oneStep(position[0], position[1]);//Actually draw the node
	
		function check_obstacle(x,y,cur_x,cur_y){ //checks hero location vs the obstacle coordinates 
			if(map_elements[x][y] == 1){
				hero_energy -= tree_cost; // decrements energy by variable
				map_elements[x][y] = 0;  // sets obsticle to 0 removing obstacle
			}
			if(map_elements[x][y] == 2){
				hero_energy -= boulder_cost;
				map_elements[x][y] = 0;
			}
			if(map_elements[x][y] == 3){
				hero_energy -= blackberry_cost;
				map_elements[x][y] = 0;
			}
				if(map_elements[x][y] == 4){ // if obsticle water undo movement
					position[0] = cur_x;
					position[1] = cur_y;
			}
			if(map_elements[x][y] == 5){
				hero_whiffles += treasure1_gain; //adds whiffles
					map_elements[x][y] = 0; // removes treasurechest
			}
			if(map_elements[x][y] == 6){
				hero_whiffles = 0; //sets whiffles to zero
					map_elements[x][y] = 0; // removes treasurechest
			}
            if (map_elements[x][y] == 7) { //If they land on a axe spot
            		var buying_axe = confirm("Would you like to buy an Axe to reduce tree energy cost by 7?\n Cost: 50 Whiffles");
            			if (buying_axe == true) {
                			if (hero_whiffles >= tool_cost_whiffles) {
                    				map_elements[x][y] = 0;
                    				hero_whiffles -= tool_cost_whiffles;
                    				tree_cost -= tool_axe;
                    			//	tool[0] = true;
                                    axe +=1;

                			}
                		else {
                    			alert("NOT ENOUGH WHIFFLES! Come Back When you get more!")
                		}
            	}
           	else {
                	alert("Too bad, I'll be waiting here then.")
            	}
        	}
        	if (map_elements[x][y] == 8) { //If the player lands on a Weedwacker spot
            		var weedwacker = confirm("Would you like to buy an weedwacker to reduce bush energy cost by 3?\n Cost: 50 Whiffles");
            			if (weedwacker == true) {
                			if (hero_whiffles >= tool_cost_whiffles) {
                    				map_elements[x][y] = 0;
                    				hero_whiffles -= tool_cost_whiffles;
                    				bush_cost -= tool_weedwacker;
                    			//	tool[2] = true;
                                    weedwacker +=1;

                			}
                		else {
                    			alert("NOT ENOUGH WHIFFLES! Come Back When you get more!")
                		}
            	}
            	else {
                	alert("Too bad, I'll be waiting here then.")
            	}
        	}
        	if (map_elements[x][y] == 9) { //If player lands on pickaxe spot
            		var buying_pickaxe = confirm("Would you like to buy an Pickaxe to reduce tree energy cost by 5 ?\n Cost: 50 Whiffles");
            		if (buying_pickaxe == true) {
                		if (hero_whiffles >= tool_cost_whiffles) {
                    			map_elements[x][y] = 0;
                    			hero_whiffles -= tool_cost_whiffles;
                    			boulder_cost -= tool_pickaxe;
                    		//	tool[1] = true;
                                pickaxe +=1;
                		}
                	else {
                    		alert("NOT ENOUGH WHIFFLES! Come Back When you get more!")
                	}
            	}
            	else {
                	alert("Too bad, I'll be waiting here then.")
            	}
        	}
            if(map_elements[x][y] == 10){
            var response = confirm("You found a power bar. Do you want to consume it? \nIt costs 1 whiffle, and provides 20 units of energy.");
					if(response) {
						if(hero_whiffles <1) {
							alert("Sorry you've run out of money");
						} else {
							hero_whiffles -= power_bar_cost;
 	                  	  	hero_energy += power_bar_gain;
							map_elements[x][y] = 0;
						}
					}
            }
            if(map_elements[x][y] == 11){
            var response_bino = confirm("Would you like to buy Binoculars to enhance your vision? \n Cost: 50 whiffles.");
					if(response_bino) {
						if(hero_whiffles <50) {
							alert("Sorry you dont have enough money");
						} else {
							hero_whiffles -= bino_cost;
							map_elements[x][y] = 0;
                            binoculars += 1; 
						}
					}
            }
			if(map_elements[x][y] == 12){
				hero_jewel++;  //adds 1 to hero jewels
				map_elements[x][y] = 0;
			}
		}

