        function display(){
            pos.innerHTML= position;
            energy.innerHTML= hero_energy;
	   		whiffles.innerHTML= hero_whiffles;
            check_tool_buttons() ;
            setTimeout("display()",100);
        }// refresh the current position every 100ms
