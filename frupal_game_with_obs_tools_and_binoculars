        //Chingwei start
        //black blocks for fog of war
        function black_img(x,y){
            black = new Image();
            black.src = 'black.jpg'
            var some_x = x*20;
            var some_y = y*20;
            black.onload = function(){
                context.drawImage(black, some_x, some_y, 20, 20);
            }
        }
        //draw the black blocks presenting the fog
        function draw_black(c_x, c_y){
            var m_black = [];
            for(y=0; y<=c_y; y++){
                for(x=0; x<=c_x; x++){
                    if(!check_record(x,y)){
                        m_black.push(new black_img(x,y));
                    }
                }
            }
        }
        function check_record(x,y){
            for(i=0; i<record_x.length; i++){
                if(record_x[i]==x && record_y[i]==y){
                    return true;
                }
            }
            return false;
        }
        
        //add the position into the map record
        function addposition(x, y){
            if(check_record(x,y)==false){ 
            record_x.push(x);
            record_y.push(y);
            }
        }
        //Chingwei end
        
        function draw_light_green(c_x,c_y){
            var m_light = []; //creating an array for the objects so that it's object position is it's own thing.
            for (y = 1 ; y <= c_y; y+=2){
                for (x=0; x <= c_x; x+=2){
                    m_light.push(new light_img(x+1,y-1)); //pushing that image function into the array
                    m_light.push(new light_img(x,y));
                }
            }
        }
    
        function drawChessBoard(){
            draw_green(canvas_position[0],canvas_position[1]);
            draw_light_green(canvas_position[0],canvas_position[1]);
	        draw_obstacles();
            addposition(position[0]-1,position[1]+1);
            addposition(position[0]-1,position[1]);
            addposition(position[0]-1,position[1]-1);
            addposition(position[0]+1,position[1]+1);
            addposition(position[0]+1,position[1]);
            addposition(position[0]+1,position[1]-1);
            addposition(position[0],position[1]+1);
            addposition(position[0],position[1]-1);
            if(bino) {
                addposition(position[0],position[1]+2);
                addposition(position[0],position[1]-2);
                addposition(position[0]+1,position[1]+2);
                addposition(position[0]+1,position[1]-2);
                addposition(position[0]+2,position[1]+2);
                addposition(position[0]+2,position[1]-2);
                addposition(position[0]-1,position[1]+2);
                addposition(position[0]-1,position[1]-2);
                addposition(position[0]-2,position[1]+2);
                addposition(position[0]-2,position[1]-2);
                addposition(position[0]+2,position[1]+1);
                addposition(position[0]+2,position[1]-1);
                addposition(position[0]-2,position[1]+1);
                addposition(position[0]-2,position[1]-1);
                addposition(position[0]+2,position[1]);
            }
            draw_black(canvas_position[0], canvas_position[1]);
            /*
            for(var i=0;i<21;i++){
                context.strokeStyle="#D6D1D1";
                context.moveTo(21+i*30,21);//There are 21 vertical lines, the gap is 30px
                context.lineTo(21+i*30,620);
                context.stroke();
